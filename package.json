{
  "name": "bitmail-app",
  "version": "1.0.0",
  "main": "public/electron.js",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "electron-start": "electron .",
    "dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && yarn electron-start\"",
    "postinstall": "electron-builder install-app-deps",
    "dedupe": "yarn dedupe",
    "electron-pack": "yarn build && electron-builder",
    "electron-pack-only": "electron-builder"
  },
  "dependencies": {
    "@bitgo/utxo-lib": "^11.2.3",
    "@cosmjs/proto-signing": "^0.33.0",
    "@cosmjs/stargate": "^0.33.0",
    "@craco/craco": "^7.1.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.4.5",
    "assert": "^2.1.0",
    "bip39": "^3.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "concurrently": "^7.6.0",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "eccrypto": "^1.1.6",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "inherits": "^2.0.4",
    "ipfs-http-client": "^60.0.1",
    "jsqr": "^1.4.0",
    "multiformats": "^11.0.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "qr-scanner": "^1.4.2",
    "qrcode.react": "^4.2.0",
    "querystring-es3": "^0.2.1",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "readable-stream": "^4.1.0",
    "setimmediate": "^1.0.5",
    "sharp": "^0.33.5",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "wait-on": "^8.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^23.1.2",
    "electron-builder": "^24.0.0",
    "eslint-plugin-react-hooks": "^5.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "root": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.example.bitmail",
    "productName": "Bitmail",
    "copyright": "Copyright Â© 2025 Your Name",
    "files": [
      "electron.cjs",
      "build/**/*",
      "node_modules/**/*",
      "preload.js"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app-icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
